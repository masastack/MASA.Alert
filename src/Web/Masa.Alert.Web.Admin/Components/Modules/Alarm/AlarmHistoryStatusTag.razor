@inherits AdminCompontentBase
<span class="@($"px-3 py-2 btn {Class}")" style="border-radius: 18px">@T(Value.ToString())</span>
@code {
    [Parameter]
    public AlarmHistoryHandleStatuses Value { get; set; }

    public string Class { get; set; }

    protected override void OnParametersSet()
    {
        switch (Value)
        {
            case AlarmHistoryHandleStatuses.Pending:
                Class = "warning--text warning-lighten";
                break;
            case AlarmHistoryHandleStatuses.InProcess:
                Class = "yellow-clicked--text yellow-lighten";
                break;
            case AlarmHistoryHandleStatuses.ProcessingCompleted:
                Class = "green--text green-lighten";
                break;
            default:
                break;
        }
    }
}
