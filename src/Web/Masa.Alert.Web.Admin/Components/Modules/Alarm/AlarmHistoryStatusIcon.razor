@switch (Value)
{
    case AlarmHistoryHandleStatuses.Pending:
        <SIcon Size=@Size Dark Color="remind">
            mdi-timer-outline
        </SIcon>
        break;
    case AlarmHistoryHandleStatuses.InProcess:
        <SIcon Size=@Size Dark Color="primary">
            mdi-chart-donut
        </SIcon>
        break;
    case AlarmHistoryHandleStatuses.ProcessingCompleted:
        <SIcon Size=@Size Dark Color="success">
            mdi-check
        </SIcon>
        break;
    case AlarmHistoryHandleStatuses.Notified:
        <SIcon Size=@Size Dark Color="info">
            mdi-message-text
        </SIcon>
        break;
}

@code {
    [Parameter]
    public AlarmHistoryHandleStatuses Value { get; set; }

    [Parameter]
    public StringNumber? Size { get; set; } = 16;
}
