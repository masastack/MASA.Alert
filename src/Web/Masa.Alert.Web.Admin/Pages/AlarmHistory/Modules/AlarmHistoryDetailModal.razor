@inherits AdminCompontentBase
<SSimpleModal Value="_visible" ValueChanged="HandleVisibleChanged" OnDelete="HandleDel"
              Title="@T("ViewAlarmHistory")" Class="full-height" HeaderClass="mr-4">
    <ChildContent>
        <AutoHeight Overflow>
            <AutoHeightContent>
                <DefaultTitle Class="mb-4">@T("AlarmDetails")</DefaultTitle>
                <AlarmHistoryDetail AlarmHistory="_model" HandleStatusShow="_model.IsNotification"></AlarmHistoryDetail>
            </AutoHeightContent>
        </AutoHeight>
       
    </ChildContent>
    <DeleteContent Context="delete">
        @if (_entityId != default)
        {
            <MButton Class="mr-4" Icon OnClick="delete.Click">
                <SIcon Size="24" Color="error" Class="align-self-center" >mdi-delete</SIcon>
            </MButton>
        }
    </DeleteContent>
</SSimpleModal>
